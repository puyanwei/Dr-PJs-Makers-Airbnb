<% include partials/header %>

<link rel="stylesheet" href="../style.css">


<h2 class="blueClass">Rooms</h2>

<ul>
    <% rooms.forEach(function(room) { %>
    <li class="blueClass">
        <%= room.title %>,
        <%= room.owner %>,
        <%= room.location %>,
        <%= room.description %>,
        Â£<%= room.price %>
        <div id="Book<%= room.title %>" >
        <% if (room.booked === false) { %>
            <% if(currentUser !== undefined) { %>
        <form method="POST" action="/rooms/book">
            <button type="submit" name="roomName" value="<%= room.title %>">Book This Room</button>
        </form>
            <% } %>
        <% } else { %>
            - This room has been booked
            <% if(currentUser !== undefined) { %>
                <% if(currentUser.name === room.owner) { %>
                <form method="POST" action="/rooms/unbook">
                    <button type="submit" name="unbookRoomName" value="<%= room.title %>">Make This Room Free</button>
                </form>
                <% } %>
            <% } %>
        <% } %>
        </div>
    </li>
    <br>
    <% })%>
</ul>

<% if (currentUser != undefined) { %>

<form method="POST" action="/rooms/add">
    <button type="submit" name="newRoom">New room</button>
</form>
<form method="POST" action="/users/signout">
    <button type="submit" name="signOut" id="signOut">Sign out</button>

</form>
<% } else {%>
<form method="get" action="/signup">
    <button type="submit" name="signUp">Sign up</button>
</form>
<form method="get" action="/signin">
    <button type="submit" name="signIn">Sign in</button>
</form>
<% } %>


<% include partials/footer %>
