<% include partials/header %>

<% if(errors != undefined){ %>
<ul>
    <% errors.forEach(function(error){ %>
    <li>
        <%= error.msg %>
    </li>
    <% })%>
</ul>
<% } %>

<h2>Sign Up</h2>
<form method="POST" action="/signup">
    <label class="inputPrompt">Name</label><br>
    <input type="text" name="name">
    <br>
    <label class="inputPrompt">Username</label><br>
    <input type="text" name="username">
    <br>
    <label class="inputPrompt">Password</label><br>
    <input type="password" name="password">
    <br>
    <label class="inputPrompt">Email</label><br>
    <input type="text" name="email">
    <br>
    <br>
    <button class="btn btn-primary button" style="margin: 10px" type="submit" name="sign up"><span>Sign up</span></button>
</form>

<form method="POST" action="/rooms">
    <button class="btn btn-primary button" style="margin: 10px" type="submit" name="rooms"><span>Visit rooms</span></button>
</form>

<% include partials/footer %>